{{#section "styles" append=true}}
<link rel="stylesheet" href="/Adminn.css">
{{/section}}

<form class="add-user-form" method="POST" action="/admin/user/add">
  <div class="edit-user-form">
    <h3>Add User Account</h3>

    <div class="form-group">
      <label>Full Name</label>
      <input type="text" name="Fullname" required />
    </div>

    <div class="form-group">
      <label>Username</label>
      <input type="text" name="UserName" required />
    </div>
    <div class="form-group">
      <label>Password</label>
      <input type="password" name="Password" required />
    </div>
    <div class="form-group">
      <label>Email</label>
      <input type="email" name="Email" required />
    </div>

    <fieldset class="account-type">
      <legend>Role</legend>

      <label>
        <input type="radio" name="UserPermission" value="0" class="admin"> Admin
      </label>

      <label>
        <input type="radio" name="UserPermission" value="1" class="instructor"> Instructor
      </label>

      <label>
        <input type="radio" name="UserPermission" value="2" class="student" checked> Student
      </label>
    </fieldset>
    <div class="form-actions">
      <a href="/admin/user/list">
        <button type="button" class="btn-cancel">
          <i class="bi bi-x-circle"></i> Cancel
        </button>
      </a>
      <button type="submit" class="btn-save">
        <i class="bi bi-check-circle"></i> Save
      </button>
    </div>
  </div>
</form>