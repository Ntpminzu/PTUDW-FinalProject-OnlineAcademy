{{#section "styles" append=true}}
<link rel="stylesheet" href="/Adminn.css">
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const searchInput = document.querySelector(".search-box input");
    const rows = document.querySelectorAll(".user-table tbody tr");

    if (!searchInput || !rows.length) return;

    searchInput.addEventListener("input", () => {
      const keyword = searchInput.value.trim().toLowerCase();

      rows.forEach((row) => {
        const text = row.textContent.toLowerCase();
        if (text.includes(keyword)) {
          row.style.display = "";
        } else {
          row.style.display = "none";
        }
      });
    });
  });
</script>

{{/section}}

<div class="user-container">
    <h2>Category Management</h2>

    <div class="toolbar">
        <div class="filters">
            <div class="search-box">
                <i class="bi bi-search"></i>
                <input type="text" placeholder="Search">
            </div>
        </div>
        <a href="/admin/category/add">
            <button class="btn-add"><i class="bi bi-plus-circle"></i> Add Category</button>
        </a>
    </div>

    <div class="table-wrapper">
        <table class="user-table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {{#each categories}}
                <tr>
                    <td>
                        <div class="user-info">
                            <span>{{CatID}}</span>
                        </div>
                    </td>
                    <td>
                        <div class="user-info">
                            <span>{{CatName}}</span>
                        </div>
                    </td>
                    <td>
                        <div class="user-info">
                            <span>{{CatDes}}</span>
                        </div>
                    </td>
                    <td>
                        <a href="/admin/category/edit?id={{CatID}}" class="actions">
                            <i class="bi bi-pencil" data-tooltip="Edit"></i>
                        </a>
                        <form action="/admin/category/del" method="POST" style="display:inline;">
                            <input type="hidden" name="CatID" value="{{CatID}}">
                            <button type="submit" class="actions"
                                onclick="return confirm('Are you sure you want to delete this user?')">
                                <i class="bi bi-trash" data-tooltip="Delete"></i>
                            </button>
                        </form>
                        <a href="/admin/subcat/byCat?id={{CatID}}" class="actions">
                            <i class="bi bi-eye" data-tooltip="View Detail"></i>
                        </a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>

</div>