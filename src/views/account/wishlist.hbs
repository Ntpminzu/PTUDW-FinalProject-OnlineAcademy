{{#section "styles" append=true}}
<link rel="stylesheet" href="/wishlist.css">
{{/section}}

<div class="container mt-4 wishlist-page">
  <h2 class="wishlist-title">Your Wishlist</h2>

  <div class="row">
    {{#if empty}}
      <p class="empty-text">B·∫°n ch∆∞a l∆∞u kh√≥a h·ªçc n√†o üòä</p>
    {{else}}
      {{#each items}}
      <div class="col-md-4 mb-4">
        <div class="wishlist-card">
          <img src="{{ImageUrl}}" alt="Course Image">

          <div class="wishlist-details">
            <p class="category">Category: {{CategoryName}}</p>
            <h3>{{CourseName}}</h3>
            <p class="instructor">Professor: {{InstructorName}}</p>
            <div class="d-flex justify-content-between align-items-center mt-3">
              <a href="/course/detail?id={{CourseID}}" class="btn btn-primary">View Details</a>
              <form action="/account/wishlist/remove" method="post">
                <input type="hidden" name="courseId" value="{{CourseID}}">
                <button type="submit" class="btn btn-danger">
                  <i class="bi bi-x-circle"></i> Remove
                </button>
              </form>
            </div>
          </div>
        </div>
      </div>
      {{/each}}
    {{/if}}
  </div>

  {{#if totalPages}}
  <div class="pagination">
    {{#if (gt currentPage 1)}}
      <a href="/account/wishlist?page={{subtract currentPage 1}}">Previous</a>
    {{/if}}

    {{#each (range 1 totalPages)}}
      <a href="/account/wishlist?page={{this}}" class="{{#if (eq this ../currentPage)}}active{{/if}}">
        {{this}}
      </a>
    {{/each}}

    {{#if (lt currentPage totalPages)}}
      <a href="/account/wishlist?page={{plus currentPage 1}}">Next</a>
    {{/if}}
  </div>
  {{/if}}
</div>
