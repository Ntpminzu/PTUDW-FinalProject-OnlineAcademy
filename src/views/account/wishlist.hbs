{{#section "styles" append=true}}
{{/section}}

<div class="container mt-4">
  <h2 style="color: gold; text-align: center; font-weight: bold; font-size: 1.5rem; ">Your Wishlist</h2>
  <div class="row">
    {{#if empty}}
      <p class="text-muted" style="color: beige; text-align: center; font-weight: bold; font-size: 1.0rem;">B·∫°n ch∆∞a l∆∞u kh√≥a h·ªçc n√†o üòä</p>
    {{else}}
      {{#each items}}
    <div class="col-md-4">
      <div class="card">
        <img src="{{ImageUrl}}" class="card-img-top" alt="Course Image">
        <div class="card-body">
          <h5 class="card-title">{{CourseName}}</h5>
          <p class="card-text">Professor: {{InstructorName}}</p>
          <p class="card-text">{{TinyDes}}</p>
          <a href="/course/detail?id={{CourseID}}" class="btn btn-primary">View Details</a>
          <form action="/account/wishlist/remove" method="post" class="float-end ms-2">
              <input type="hidden" name="courseId" value="{{CourseID}}">
              <button class="btn btn-danger">
                <i class="bi bi-x-circle"></i> Remove
              </button>
            </form>
        </div>
      </div>
    </div>
      {{/each}}
    {{/if}}
  </div>
</div>