{{#section "styles" append=true}}
<link rel="stylesheet" href="/category.css">
{{/section}}

<div class="add-page">
  <div class="card add-card">
    <h5 class="card-header">
      <i class="bi bi-plus-circle"></i> Add New Category
    </h5>

    <div class="card-body">
      <form action="/category/add" method="POST">
        <div class="mb-3">
          <label for="catName" class="form-label">Category Name</label>
          <input type="text" id="catName" name="catName" class="form-control" required>
        </div>

        <div class="mb-3">
          <label for="catDesc" class="form-label">Description</label>
          <textarea id="catDesc" name="catDesc" class="form-control" rows="3"></textarea>
        </div>

        <div class="d-flex justify-content-end gap-2">
          <a href="/category/list" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left"></i> Cancel
          </a>
          <button type="submit" class="btn btn-primary">
            <i class="bi bi-save"></i> Save
          </button>
        </div>
      </form>
    </div>

    <div class="card-footer text-muted text-center">
      Hogwarts Academy Â© 2025
    </div>
  </div>
</div>