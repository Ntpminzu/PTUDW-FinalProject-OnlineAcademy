{{#section "styles" append=true}}
<link rel="stylesheet" href="/Adminn.css">
{{/section}}

<form class="edit-user-form" method="POST" action="/admin/course/patch">
    <div class="edit-user-form">
        <h3>Edit Course</h3>

        <div class="form-group">
            <label>Course ID</label>
            <input type="text" value="{{course.CourseID}}" name="CourseID" readonly />
        </div>

        <div class="form-group">
            <label>Course Name</label>
            <input type="text" value="{{course.CourseName}}" name="CourseName" required />
        </div>

        <div class="form-group">
            <label>Tiny Description</label>
            <input type="text" value="{{course.TinyDes}}" name="TinyDes" />
        </div>

        <div class="form-group">
            <label>Full Description</label>
            <textarea class="big-input" name="FullDes">{{course.FullDes}}</textarea>
        </div>

        <div class="form-group">
            <label>Image URL</label>
            <input type="text" value="{{course.ImageUrl}}" name="ImageUrl" />
        </div>

        <div class="form-group">
            <label>Level</label>
            <select name="Level">
                <option value="Beginner" {{#if (eq course.Level "Beginner" )}}selected{{/if}}>Beginner</option>
                <option value="Intermediate" {{#if (eq course.Level "Intermediate" )}}selected{{/if}}>Intermediate
                </option>
                <option value="Advanced" {{#if (eq course.Level "Advanced" )}}selected{{/if}}>Advanced</option>
                <option value="Expert" {{#if (eq course.Level "Expert" )}}selected{{/if}}>Expert</option>
            </select>
        </div>

        <div class="form-group">
            <label>Current Price</label>
            <input type="number" value="{{course.CurrentPrice}}" name="CurrentPrice" />
        </div>

        <div class="form-group">
            <label>Original Price</label>
            <input type="number" value="{{course.OriginalPrice}}" name="OriginalPrice" />
        </div>
        <div class="form-group">
            <label>SubCategory</label>
            <select name="SubCatID">
                {{#each subcategories}}
                <option value="{{this.SubCatID}}" {{#ifCond this.SubCatID '==' ../course.SubCatID}}selected{{/ifCond}}>
                    {{this.SubCatName}}
                </option>
                {{/each}}
            </select>
        </div>
        <div class="form-group">
            <label>Status</label>
            <select name="CourseStatus">
                <option value="Draft" {{#if (eq course.CourseStatus "Draft" )}}selected{{/if}}>Draft</option>
                <option value="Completed" {{#if (eq course.CourseStatus "Completed" )}}selected{{/if}}>Completed
                <option value="Disable" {{#if (eq course.CourseStatus "Disable" )}}selected{{/if}}>Disable
                </option>
            </select>
        </div>
        <div class="form-actions">
            <a href="/admin/course/byCat?id={{subcat.CatID}}&bySubCat={{course.SubCatID}}">
                <button type="button" class="btn-cancel">
                    <i class="bi bi-x-circle"></i> Cancel
                </button>
            </a>
            <button type="submit" class="btn-save">
                <i class="bi bi-check-circle"></i> Save
            </button>
        </div>
    </div>
</form>