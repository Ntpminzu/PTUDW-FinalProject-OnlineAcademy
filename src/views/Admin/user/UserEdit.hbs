{{#section "styles" append=true}}
<link rel="stylesheet" href="/Adminn.css">
{{/section}}

<form class="edit-user-form" method="POST" action="/admin/user/patch">
  <div class="edit-user-form">
    <h3>Edit User Account</h3>

    <div class="form-group">
      <label>User ID</label>
      <input type="text" value="{{user.UserID}}" name="UserID" readonly />
    </div>

    <div class="form-group">
      <label>Full Name</label>
      <input type="text" value="{{user.Fullname}}" name="Fullname" required />
    </div>

    <div class="form-group">
      <label>Username</label>
      <input type="text" value="{{user.UserName}}" name="UserName" required />
    </div>

    <div class="form-group">
      <label>Email</label>
      <input type="email" value="{{user.Email}}" name="Email" required />
    </div>

    <fieldset class="account-type">
      <legend>Role</legend>

      <label><input type="radio" name="UserPermission" value="0" {{#ifCond user.UserPermission '==' 0}}checked{{/ifCond}}> Admin</label>
      <label><input type="radio" name="UserPermission" value="1" {{#ifCond user.UserPermission '==' 1}}checked{{/ifCond}}> Instructor</label>
      <label><input type="radio" name="UserPermission" value="2" {{#ifCond user.UserPermission '==' 2}}checked{{/ifCond}}> Student</label>
    </fieldset>

    <div class="form-actions">
      <a href="/admin/user/list">
        <button type="button" class="btn-cancel">
          <i class="bi bi-x-circle"></i> Cancel
        </button>
      </a>
      <button type="submit" class="btn-save">
        <i class="bi bi-check-circle"></i> Save
      </button>
    </div>
  </div>
</form>
