<link rel="stylesheet" href="/signin-signup.css">
<div class="auth-container">
  <h2>🧙‍♂️ Welcome Back, Wizard!</h2>

  {{#if error}}
  <div class="error">{{error}}</div>
  {{/if}}

  {{#if success}}
  <div class="success">{{success}}</div>
  {{/if}}

  {{#if showOtp}}
    <p>We’ve sent a 6-digit OTP to <b>{{email}}</b>. Please enter it below:</p>
    <form action="/account/verify-signin-otp" method="POST" class="auth-form">
      <input type="hidden" name="username" value="{{username}}">
      <div class="form-group">
        <label for="otp">Enter OTP</label>
        <input id="otp" name="otp" type="text" required placeholder="e.g. 123456">
      </div>
      <button type="submit" class="magic-btn">✨ Verify ✨</button>
    </form>

  {{else}}
    <form id="frmSignin" method="POST" action="/account/signin" class="auth-form">
      <div class="form-group">
        <label for="username">Username</label>
        <input id="username" name="username" type="text" required>
      </div>

      <div class="form-group">
        <label for="password">Password</label>
        <input id="password" name="password" type="password" required>
      </div>

      <button type="submit" class="magic-btn">🪄 Sign In 🪄</button>
    </form>
  {{/if}}

  <p class="auth-footer">
    Don’t have an account? <a href="/account/signup">Create one</a>
  </p>
</div>
