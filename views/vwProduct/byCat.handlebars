<div class="card">
  <h5 class="card-header">Products in category > {{catname}}</h5>
  <div class="card-body">
    {{#if empty}}
    <div class="row">
      <div class="col">
        <p>Không có sản phẩm trong danh mục này!</p>
      </div>
    </div>
    {{else}}
    <div class="row row-gap-3">
      {{#each products}}
      <div class="col-md-6">
        <div class="card">
          <img src="/static/imgs/sp/{{proid}}/main_thumbs.jpg" class="card-img-top" alt="{{proname}}">
          <div class="card-body">
            <h4 class="card-title">{{proname}}</h4>
            <h5 class="card-title text-danger">{{format_number price}}</h5>
            <p class="card-text">{{tinydes}}</p>
          </div>
          <div class="card-footer">
            <a href="/products/details?id={{proid}}" class="btn btn-sm btn-outline-primary">
              <i class="bi bi-eye"></i>
              View Details
            </a>
            <a href="#" class="btn btn-sm btn-outline-success">
              <i class="bi bi-cart-plus"></i>
              Add to Cart
            </a>
          </div>
        </div>
      </div>
      {{/each}}
    </div>
    <nav aria-label="..." class="mt-3">
      <ul class="pagination">
        <li class="page-item ">
          <a class="page-link">Previous</a>
        </li>
        {{#each pages}}
        {{#if isCurrent}}
        <li class="page-item active" aria-current="page">
          <a class="page-link" href="javascript:void(0);">
            {{value}}
          </a>
        </li>
        {{else}}
        <li class="page-item">
          <a class="page-link" href="?id={{catid}}&page={{value}}">
            {{value}}
          </a>
        </li>
        {{/if}} 
        {{/each}}
        <li  class="page-item">
          <a class="page-link" href="#">Next</a>
        </li>
      </ul>
    </nav>
    {{/if}}
  </div>
</div>