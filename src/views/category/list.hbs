{{#section "styles" append=true}}
<link rel="stylesheet" href="/category.css">
{{/section}}

<div class="list-page">
  <div class="card">
    <h5 class="card-header d-flex justify-content-between align-items-center">
      LIST OF CATEGORIES
      <a class="btn btn-sm btn-primary" href="add" role="button">
        <i class="bi bi-plus-circle"></i>
        NEW CATEGORY
      </a>
    </h5>
    <div class="card-body">
      <table class="table table-hover">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">CATEGORY</th>
            <th scope="col">DESCRIPTION</th>
            <th scope="col" class="text-end">ACTION</th>
          </tr>
        </thead>
        <tbody>
          {{#each category}}
          <tr>
            <th scope="row">{{CatID}}</th>
            <td>{{CatName}}</td>
            <td>{{CatDes}}</td>
            <td class="text-end">
              <a class="btn btn-sm btn-outline-primary" href="edit?id={{CatID}}" role="button">
                <i class="bi bi-pencil-square"></i>
              </a>
            </td>
          </tr>
          {{/each}}
        </tbody>
      </table>
    </div>
    <div class="card-footer text-muted text-center">
      Footer
    </div>
  </div>
</div>
