{{#section "styles" append=true}}
<link rel="stylesheet" href="/search.css">
{{/section}}

<div class="search-result-page container mt-4">
  <h3 class="text-center mb-4">Search results for "{{keyword}}"</h3>

  {{#if categories.length}}
  <h4>Categories</h4>
  <div class="list-group mb-4">
    {{#each categories}}
      <a href="/course/bycat?id={{CatID}}" class="list-group-item list-group-item-action">
        {{CatName}}
      </a>
    {{/each}}
  </div>
  {{/if}}

  {{#if courses.length}}
  <h4>Courses</h4>
  <div class="row">
    {{#each courses}}
    <div class="col-md-3 mb-3">
      <div class="card h-100 shadow-sm">
        <div class="card-body">
          <h6 class="card-title">{{CourseName}}</h6>
          <p class="text-muted small">{{FullDes}}</p>
          <a href="/course/detail?id={{CourseID}}" class="btn btn-outline-primary btn-sm">View Detail</a>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
  {{/if}}
</div>

{{#unless categories.length}}
  {{#unless courses.length}}
    <div class="alert alert-warning text-center mt-4">
      No courses or categories found for "{{keyword}}"
    </div>
  {{/unless}}
{{/unless}}

