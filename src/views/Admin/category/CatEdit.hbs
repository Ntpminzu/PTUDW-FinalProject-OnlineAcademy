{{#section "styles" append=true}}
<link rel="stylesheet" href="/Adminn.css">
{{/section}}

<form class="edit-user-form" method="POST" action="/admin/category/patch">
  <div class="edit-user-form">
    <h3>Edit Category</h3>

    <div class="form-group">
      <label>Category ID</label>
      <input type="text" value="{{category.CatID}}" name="CatID" readonly />
    </div>

    <div class="form-group">
      <label>Category Name</label>
      <input type="text" value="{{category.CatName}}" name="CatName" />
    </div>

    <div class="form-group">
      <label>Description</label>
      <textarea class="big-input" name="CatDes">{{category.CatDes}}</textarea>
    </div>

    <div class="form-actions">
      <a href="/admin/category/list">
        <button type="button" class="btn-cancel">
          <i class="bi bi-x-circle"></i> Cancel
        </button>
      </a>
      <button type="submit" class="btn-save">
        <i class="bi bi-check-circle"></i> Save
      </button>
    </div>
  </div>
</form>