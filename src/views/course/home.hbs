<!-- üåÑ BANNER -->
<section class="banner">
  <div id="bannerCarousel" class="carousel slide h-100" data-bs-ride="carousel">
    <!-- Ch·∫•m tr√≤n ƒëi·ªÅu h∆∞·ªõng -->
    <div class="carousel-indicators">
      <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="0" class="active"></button>
      <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="1"></button>
      <button type="button" data-bs-target="#bannerCarousel" data-bs-slide-to="2"></button>
    </div>

    <!-- C√°c ·∫£nh -->
    <div class="carousel-inner banner-carousel">
      <div class="carousel-item active">
        <img src="/img/pic1.jpg" class="d-block w-100" alt="Banner 1">
      </div>
      <div class="carousel-item">
        <img src="/img/pic2.jpg" class="d-block w-100" alt="Banner 2">
      </div>
      <div class="carousel-item">
        <img src="/img/pic3.jpg" class="d-block w-100" alt="Banner 3">
      </div>
    </div>
    <!-- N√∫t ƒëi·ªÅu h∆∞·ªõng -->
    <button class="carousel-control-prev banner-btn prev" type="button" data-bs-target="#bannerCarousel"
      data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Previous</span>
    </button>

    <button class="carousel-control-next banner-btn next" type="button" data-bs-target="#bannerCarousel"
      data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Next</span>
    </button>
  </div>
</section>

<!-- üé† FEATURED COURSES CAROUSEL (FLIP VERSION) -->
<section class="carousel-section">
  <h2>‚ú® Featured Courses of the Week ‚ú®</h2>
  <div class="snake-bg">
    <img src="/img/snake1.jpg" alt="Snake Background">
  </div>
  <swiper-container class="mySwiper" effect="cards" grab-cursor="true" loop="true" autoplay-delay="3000">

    <!-- ü™Ñ CARD 1 -->
    {{#each top4Week}}
    <swiper-slide>
      <div class="carousel-card">
        <div class="card-inner">
          <!-- M·∫∑t tr∆∞·ªõc -->
          <div class="card-front">
            <div class="teacher-frame">
              <img src="{{ImageUrl}}" alt="{{CourseName}}">
            </div>
            <h3>{{CourseName}}</h3>
            <p class="field">{{CategoryName}}</p>
            <p class="instructor">{{InstructorName}}</p>
          </div>

          <!-- M·∫∑t sau -->
          <div class="card-back">
            <h3>Course Details</h3>
            <p>{{{TinyDes}}}</p>
            <div class="rating">
              ‚≠ê {{Rating}} <span>({{TotalStudent}} students)</span>
            </div>
            <div class="price">
              <span class="current">${{CurrentPrice}}</span>
              <span class="old">${{OriginalPrice}}</span>
            </div>
            <div class="btn-group-access">
              <a href="/course/detail?id={{CourseID}}" class="btn btn-primary">View Course</a>
            </div>
          </div>
        </div>
      </div>
    </swiper-slide>
    {{/each}}

  </swiper-container>
</section>

<!-- ==== MOST STUDIED FIELDS ==== -->
<div class="section">
  <h2>Most Studied Fields This Week</h2>
  <div class="field-list">
    {{#each top10Week}}
    <div class="field-card"><a href="/course/bycat?catid={{CatID}}&subcatid={{SubCatID}}">
        <p>{{SubCatName}}</p>
      </a></div>
    {{/each}}
  </div>
</div>
<!-- ==== TOP 10 MOST VIEWED COURSES ==== -->
<div class="section">
  <h2>Top 10 Most Viewed Courses</h2>
  <div class="course-list">
    {{#each topCourses}}
    <div class="course-card">
      <a href="/course/detail?id={{CourseID}}">
        <img src="{{this.ImageUrl}}" alt="{{this.CourseName}}">
        <div class="course-info">
          <p class="category">{{this.CatName}}</p>
          <h3>{{this.CourseName}}</h3>
          <p class="instructor">{{this.InstructorName}}</p>
          <div class="course-rating">
            <i class="fas fa-star"></i><i class="fas fa-star"></i>
            <i class="fas fa-star"></i><i class="fas fa-star"></i>
            <i class="far fa-star"></i>
            <span>{{this.Rating}} ‚≠ê ({{this.Total_Review}})</span>
          </div>
          <div class="course-price">
            <span class="current">${{this.CurrentPrice}}</span>
            <span class="old">${{this.OriginalPrice}}</span>
          </div>
        </div>
      </a>
    </div>

    {{/each}}
  </div>
</div>

