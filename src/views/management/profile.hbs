{{#section "styles" append=true}}
<link rel="stylesheet" href="/course-form.css" />
{{/section}}

<main class="main-content">
    <div class="container">
        <div class="welcome-section">
            <h1 class="welcome-title">Instructor Profile</h1>
            <p class="welcome-text">Change Your Profile.</p>
        </div>

        <section class="section active">
            <h2 class="section-title">üë®‚Äçüè´ My Profile</h2>

            {{#if success}}
            <div class="alert alert-success" role="alert"
                style="background-color: #2d7a4f; color: white; border: none; margin: 0 auto 20px auto; max-width: 800px; text-align: center; font-weight: bold;">
                {{success}}
            </div>
            {{/if}}

            <div class="form-container" style="max-width: 800px; margin: 0 auto;">
                <form action="/management/profile/update" method="POST">

                    {{! DDL x√°c nh·∫≠n: UserName }}
                    <div class="form-row full">
                        <div class="form-group">
                            <label class="form-label">Username (Can not change)</label>
                            <input type="text" class="form-input" value="{{instructor.UserName}}" disabled />
                        </div>
                    </div>

                    <div class="form-row">
                        {{! DDL x√°c nh·∫≠n: Fullname }}
                        <div class="form-group">
                            <label class="form-label" for="Fullname">Full name</label>
                            <input type="text" class="form-input" id="Fullname" name="fullname"
                                value="{{instructor.Fullname}}" required />
                        </div>
                        {{! DDL x√°c nh·∫≠n: Email }}
                        <div class="form-group">
                            <label class="form-label" for="Email">Email</label>
                            <input type="email" class="form-input" id="Email" name="email" value="{{instructor.Email}}"
                                required />
                        </div>
                    </div>

                    <div class="form-row full">
                        <div class="form-group">
                            <label class="form-label">Permission (Can not change)</label>
                            <input type="text" class="form-input" value="Instructor" disabled />
                        </div>
                    </div>

                    <div style="text-align: center; margin-top: 30px">
                        <button type="submit" class="btn btn-primary">
                            üíæ Save
                        </button>
                    </div>
                </form>
            </div>
        </section>
    </div>
</main>